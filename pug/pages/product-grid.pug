extends ../layout/layout.pug
block header
  include ../partials/header
block content
    - var sidebarData = { productCategories: true, priceRanger: true, listColor: true, promotion: true, }
    - const pages = ["Trang trước", "1", "2", "3", "Trang cuối"]
    - var breadcrumbsData = [{label:"Trang chủ", path:"./index.html"}, {label:"Danh mục sản phẩm",path:"#"},] 

    + breadcrumbs(breadcrumbsData)
    main.product-grid
        aside.sidebar
            include ../partials/sidebar.pug
        section.products-view 
            div.filter
                form.filter__form
                    div.sort-by.form__select
                        label(for="sort-by") Sắp xếp theo:
                        select#sort-by
                            option(value="1") Tên sản phẩm 
                    div.num-of-product.form__select
                        label(for="num-of-product") Show:
                        select#sort-by
                            option(value="18") 18  
                div.view-mode
                    a(href="/product-list.html").btn 
                        i.fa.fa-bars
                    a(href="/product-grid.html").btn.active 
                        i.fa.fa-th
            div.grid
                ul.grid__products 
                    each product in productData
                        + productItem(product)
            div.paging
                each page in pages
                    button.btn.btn--white 
                        | #{page}
        
block footer
  include ../partials/footer